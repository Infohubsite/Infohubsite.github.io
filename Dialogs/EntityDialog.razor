@inject IEntityDefinitionService EDS
@inject INotificationService NS

<MudDialog>
    <DialogContent>
        <ErrorDisplay DisplayAnyway="true" Errors="_errors">
            <MudForm @ref="_form" @bind-IsValid="_valid" Class="mt-4">
                <MudTextField @bind-Value="_model.Name" Label="Entity Name" For="@(() => _model.Name)" />
            </MudForm>

            <MudText Typo="Typo.h6" Class="mt-6 mb-2">Fields</MudText>

            <FieldEditor Fields="_model.Fields" Editing="_isEditing" />
        </ErrorDisplay>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled">@(_isEditing ? "Edit" : "Create")</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public EntityDefinition? CurrentEntity { get; set; }

    private List<EntityDefinition> _entityDefinitions = [];

    private MudForm _form = default!;
    private bool _valid;
    private bool _isEditing;
    private List<string> _errors = [];
    private EntityDefinitionI _model = new();

    protected override async Task OnInitializedAsync()
    {
        if (CurrentEntity != null)
        {
            _isEditing = true;
            _model.Name = CurrentEntity.Name;
            _model.Fields = CurrentEntity.Fields.Select(f => new FieldDefinitionI(f)).ToList();
        }

        Result<List<EntityDefinition>> result = await EDS.GetEntityDefinitionsAsync();
        if (result.IsSuccess)
            _entityDefinitions = result.Value;
        else
        {
            _errors.Add("Failed to load entity definitions.");
            throw new HttpRequestException("Failed to load entity defintions.");
        }
    }

    private async Task Submit()
    {
        _errors = [];
        await _form.Validate();
        if (!_valid) return;

        if (_entityDefinitions.Any(s => s.Name.Equals(_model.Name, StringComparison.OrdinalIgnoreCase) && s.Id != CurrentEntity?.Id))
        {
            _errors.Add("An Entity Definition with the same name already exists.");
            return;
        }

        if (_isEditing && CurrentEntity != null)
        {
            Result result = await EDS.UpdateEntityAsync(CurrentEntity.Id, _model);
            if (!result.IsSuccess)
            {
                _errors.Add(result.Exception?.Message ?? "Failed to update entity.");
                return;
            }

            await NS.Show($"Successfully renamed Entity Definition to '{_model.Name}.'", Severity.Success);
            MudDialog.Close(DialogResult.Ok(_model.Name));
        }
        else
        {
            Result<EntityDefinition> result = await EDS.CreateEntityAsync(_model);
            if (!result.IsSuccess)
            {
                _errors.Add(result.Exception?.Message ?? "Failed to create entity.");
                return;
            }

            await NS.Show($"Successfully added Entity Definition '{_model.Name}'.", Severity.Success);
            MudDialog.Close(DialogResult.Ok(result.Value));
        }
    }

    private void Cancel() => MudDialog.Cancel();
}